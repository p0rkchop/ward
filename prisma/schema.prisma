generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  ADMIN
  PROFESSIONAL
  CLIENT
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  name          String
  phoneNumber   String    @unique
  email         String?   @unique
  role          Role
  setupComplete Boolean   @default(false)
  eventId       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  // Relations
  event                Event?     @relation("EventProfessionals", fields: [eventId], references: [id])
  adminEvents          Event[]    @relation("EventAdmin")
  shiftsAsProfessional Shift[]    @relation("ProfessionalShifts")
  bookingsAsClient     Booking[]  @relation("ClientBookings")

  @@index([role])
  @@index([deletedAt])
  @@index([eventId])
  @@index([setupComplete])
}

model Event {
  id                   String    @id @default(cuid())
  name                 String
  description          String?
  startDate            DateTime
  endDate              DateTime
  defaultStartTime     String    @default("09:00")
  defaultEndTime       String    @default("17:00")
  professionalPassword String
  isActive             Boolean   @default(true)
  deletedAt            DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  // Foreign keys
  adminId String

  // Relations
  admin         User       @relation("EventAdmin", fields: [adminId], references: [id])
  professionals User[]     @relation("EventProfessionals")
  days          EventDay[] @relation("EventDays")

  @@index([adminId])
  @@index([isActive])
  @@index([deletedAt])
  @@index([startDate, endDate])
}

model EventDay {
  id        String    @id @default(cuid())
  date      DateTime
  startTime String    @default("09:00")
  endTime   String    @default("17:00")
  isActive  Boolean   @default(true)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Foreign keys
  eventId String

  // Relations
  event     Event              @relation("EventDays", fields: [eventId], references: [id])
  blackouts EventDayBlackout[] @relation("EventDayBlackouts")

  @@unique([eventId, date])
  @@index([eventId])
  @@index([date])
  @@index([deletedAt])
}

model EventDayBlackout {
  id          String    @id @default(cuid())
  startTime   String
  endTime     String
  description String?
  deletedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Foreign keys
  eventDayId String

  // Relations
  eventDay EventDay @relation("EventDayBlackouts", fields: [eventDayId], references: [id])

  @@index([eventDayId])
  @@index([deletedAt])
}

model Resource {
  id                  String   @id @default(cuid())
  name                String
  description         String?
  location            String?
  quantity            Int      @default(1)
  professionalsPerUnit Int     @default(1)
  isActive            Boolean  @default(true)
  deletedAt           DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  shifts Shift[]

  @@index([isActive])
  @@index([deletedAt])
}

model Shift {
  id             String   @id @default(cuid())
  startTime      DateTime
  endTime        DateTime
  deletedAt      DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Foreign keys
  professionalId String
  resourceId     String

  // Relations
  professional User     @relation("ProfessionalShifts", fields: [professionalId], references: [id])
  resource    Resource  @relation(fields: [resourceId], references: [id])
  bookings    Booking[]

  @@index([professionalId])
  @@index([resourceId])
  @@index([startTime])
  @@index([endTime])
  @@index([deletedAt])
  @@index([professionalId, startTime, deletedAt])
  @@index([resourceId, startTime, deletedAt])
  @@unique([professionalId, startTime, endTime])
  @@unique([resourceId, startTime, endTime])
}

model Booking {
  id         String        @id @default(cuid())
  startTime  DateTime
  endTime    DateTime
  status     BookingStatus @default(CONFIRMED)
  notes      String?
  deletedAt  DateTime?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  // Foreign keys
  clientId String
  shiftId  String

  // Relations
  client User  @relation("ClientBookings", fields: [clientId], references: [id])
  shift  Shift @relation(fields: [shiftId], references: [id])

  @@index([clientId])
  @@index([shiftId])
  @@index([startTime])
  @@index([deletedAt])
  @@index([status])
  @@index([shiftId, startTime, status, deletedAt])
  @@index([clientId, startTime, deletedAt])
  @@unique([shiftId, startTime, endTime])
}
